{% extends 'base.html.twig' %}
{% block title %}Détails du client | Product Management{% endblock %}
{% block body %}
<div class="container py-5">
    <h2 class="text-center fw-bold mb-4">Product Management</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Détails du client</h4>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th class="w-25">Nom :</th>
                                <td>{{ client.name }}</td>
                            </tr>
                            <tr>
                                <th>Email :</th>
                                <td>{{ client.email }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Retour à la liste
                </a>
                <div>
                    <a href="{{ path('app_client_edit', {id: client.id}) }}" class="btn btn-warning text-white">
                        <i class="bi bi-pencil-square"></i> Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
