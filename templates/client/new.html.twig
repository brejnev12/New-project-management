{% extends 'base.html.twig' %}
{% block title %}Créer un client | Product Management{% endblock %}
{% block body %}
<div class="container py-5">
    <h2 class="text-center fw-bold mb-4">Product Management</h2>
    <h3 class="text-center mb-4">Créer un nouveau client</h3>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
                                ← Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Créer le client
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
