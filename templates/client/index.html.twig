{% extends 'base.html.twig' %}
{% block title %}Clients | Product Management{% endblock %}
{% block body %}
<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Product Management</h2>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Liste des clients</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                <i class="bi bi-house-door"></i> Accueil
            </a>
            <a href="{{ path('app_client_new') }}" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> Nouveau client
            </a>
        </div>
    </div>
    {% if clients is empty %}
        <div class="alert alert-info">
            Aucun client trouvé.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark text-white opacity-75"> {# opacité réduite #}
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.name }}</td>
                        <td>{{ client.email }}</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a href="{{ path('app_client_show', {id: client.id}) }}"
                                   class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_client_edit', {id: client.id}) }}"
                                   class="btn btn-sm btn-warning text-white">
                                    <i class="bi bi-pencil"></i> Éditer
                                </a>
                                {{ include('client/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
