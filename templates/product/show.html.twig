
{% extends 'base.html.twig' %}
{% block title %}Détails du produit | Product Management{% endblock %}
{% block body %}
<div class="container py-5">
    <h2 class="text-center fw-bold mb-4">Product Management</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Détails du produit</h4>
                </div>
                <div class="card-body text-center">
                    {# Image produit #}
                    {% if product.imageFilename %}
                        <img src="{{ asset('uploads/' ~ product.imageFilename) }}"
                             alt="{{ product.nameproduct  }}"
                             class="img-fluid rounded"
                             style="max-width: 180px; height: auto;">
                    {% else %}
                        <div class="text-muted mb-3">Aucune image disponible</div>
                    {% endif %}
                    <h3 class="mt-3">{{ product.nameproduct }}</h3>
                    <p class="text-muted">{{ product.description }}</p>
                    <div class="fs-5 mb-3">
                        <strong>Prix :</strong> {{ product.price }} €
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Retour à la liste
                        </a>
                        <a href="{{ path('app_product_edit', {id: product.id}) }}" class="btn btn-warning text-white">
                            <i class="bi bi-pencil-square"></i> Éditer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
