{% extends 'base.html.twig' %}
{% block title %}Produits | Product Management{% endblock %}
{% block body %}
<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Product Management</h2>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Liste des produits</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                <i class="bi bi-house-door"></i> Accueil
            </a>
            <a href="{{ path('app_product_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouveau produit
            </a>
        </div>
    </div>
    {% if products is empty %}
        <div class="alert alert-info">
            Aucun produit trouvé.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover align-middle">
                <thead class="table-dark text-white opacity-75">
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td class="text-center">
                            {% if product.imageFilename %}
                                <img src="{{ asset('uploads/' ~ product.imageFilename) }}"
                                     alt="{{ product.nameproduct  }}"
                                     class="img-fluid rounded-circle"
                                     style="width: 40px; height: 40px; object-fit: cover;">
                            {% else %}
                                <span class="text-muted small">Aucune image</span>
                            {% endif %}
                        </td>
                        <td>{{ product.nameproduct }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.price }} €</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a href="{{ path('app_product_show', {id: product.id}) }}"
                                   class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_product_edit', {id: product.id}) }}"
                                   class="btn btn-sm btn-warning text-white">
                                    <i class="bi bi-pencil"></i> Éditer
                                </a>
                                {{ include('product/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
