{% extends 'base.html.twig' %}

{% block title %}Commandes | Product Management{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Gestion des Commandes</h2>
        <p class="text-muted">Visualisez, éditez ou supprimez les commandes existantes.</p>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Liste des commandes</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                <i class="bi bi-house-door"></i> Accueil
            </a>
            <a href="{{ path('app_customer_order_new') }}" class="btn btn-success">
                <i class="bi bi-cart-plus"></i> Nouvelle commande
            </a>
        </div>
    </div>

    {% if customer_orders is empty %}
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> Aucune commande trouvée.
        </div>
    {% else %}
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-bordered align-middle text-center mb-0">
                <thead class="table-dark text-white">
                    <tr>
                        <th>Client</th>
                        <th>Produit</th>
                        <th>Date de commande</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in customer_orders %}
                        <tr>
                            <td>{{ order.client ? order.client.name : '—' }}</td>
                            <td>{{ order.product ? order.product.nameproduct : '—' }}</td>
                            <td>{{ order.createdAt ? order.createdAt|date('d/m/Y H:i') : '—' }}</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-1">
                                    <a href="{{ path('app_customer_order_show', {id: order.id}) }}"
                                       class="btn btn-sm btn-info text-white" title="Voir">
                                       <i class="bi bi-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_customer_order_edit', {id: order.id}) }}"
                                       class="btn btn-sm btn-warning text-white" title="Éditer">
                                        <i class="bi bi-pencil"></i> Éditer
                                    </a>
                                    {{ include('customer_order/_delete_form.html.twig', {'customer_order': order}) }}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
